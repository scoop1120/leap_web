//manifest.json
//for leap_web

{ 
    "manifest_version": 2,

    "name": "leap_web",
    "description": "Basic gesture and voice control of Chrome with Leap Motion",
    "version": "0.0.1",
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["canvas_test.js"]
    }
    ],
    "permissions": [],
    "browser_action": {
	"default_icon": "icon.png",
	"default_popup": "default_pop.html"
    }
}
