//manifest.json
//for leap_web

{ 
    "manifest_version": 2,

    "name": "leap_web",
    "description": "Basic gesture and voice control of Chrome with Leap Motion",
    "version": "0.0.2",
    "content_scripts": [{
	    "matches": ["<all_urls>"],
	    "js": ["lib/jquery-2.0.3.js",
       // "lib/leap.min.js",
        "canvas_front.js"
		  ]
	  }],
    "web_accessible_resources": ["lib/jquery-2.0.3.js","math.js"],
    "background": {
	  "scripts": ["lib/leap.min.js",
              "combine_loop.js",
		          "math.js"],
	"persistent": true
    },
    "permissions": ["tabs"],
    "browser_action": {
	"default_icon": "icon.png"//,
//	"default_popup": "default_pop.html"
    }
}
