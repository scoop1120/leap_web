//manifest.json
//for leap_web

{ 
    "manifest_version": 2,

    "name": "leap_web",
    "description": "Basic gesture and voice control of Chrome with Leap Motion",
    "version": "0.0.1",
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "js": ["lib/jquery-2.0.3.js",
       "lib/leap.min.js",
        "canvas_test.js",
		   "js/webSpeech.js",
		 //  "background.js",
		   //"js/page_nav.js",
		    "contentscript.js"
		  // "js/gestures.js"
		  ]
	}
    ],
    "web_accessible_resources": ["lib/jquery-2.0.3.js"],
    "background": {
	"scripts": ["lib/leap.min.js",
//		    "js/webSpeech.js",
		    "js/gestures.js",
		    "background.js"],
	"persistent": true
    },
    "permissions": ["tabs"],
    "browser_action": {
	"default_icon": "icon.png"//,
//	"default_popup": "default_pop.html"
    }
}
